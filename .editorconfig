root=true

[*]
    charset=utf-8
    end_of_line=lf
    indent_size=4
    indent_style=space
    insert_final_newline=true
    trim_trailing_whitespace=true

[*.{css,html,rb,md,hcl,xml,ui,json,js,jsx,pug,yml,lz,sh}]
    indent_size=2

[{*.mk,.deosrc,.env,Makefile,makefile,.makefile}]
    indent_style=tab

[{Vagrantfile}]
    indent_size=2
