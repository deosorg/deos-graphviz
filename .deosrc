include .env

.DEFAULT_GOAL     := all
.SUBLIME_TARGETS:    all
.PHONY:              all   \
                     build \
                     clean \
                     venv
FALSE             := 0
TRUE              := 1
IS_FALSE          := $(FALSE)
IS_TRUE           := $(TRUE)
IS_MAC            := Darwin
IS_LINUX          := Linux
RM                := rm -rf
GITADD            := git add .
GITCLONE          := git clone
GITPUSH           := git push
GITCOMMIT         := git commit -S -m
GITREPO           := git@github.com:libdeos/deos-graphviz.git
GITWIKI           := git@github.com:libdeos/deos-graphviz.wiki.git
WIKIMSG           := deos: wiki.sync
DOTVENV           := $(V)/.venv
DOTSWAP           := $(V)/.swap
SWAPWIKI          := $(DOTSWAP)/wiki
